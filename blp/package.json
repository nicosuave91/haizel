{
  "name": "blp",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": "20.10.0"
  },
  "scripts": {
    "preinstall": "corepack enable && corepack prepare pnpm@9.12.0 --activate",
    "build": "pnpm -r run build",
    "lock:regen": "pnpm install && pnpm dedupe",
    "lock:check": "pnpm install --frozen-lockfile --ignore-scripts --prefer-offline",
    "lock:verify-ci": "pnpm install -w --frozen-lockfile",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:rls": "bash db/tests/run_rls_checks.sh",
    "test:core-api": "./scripts/test-core-api.sh",
    "dev": "docker compose -f infra/docker-compose.dev.yml up --build",
    "ci:quick": "pnpm --filter @haizel/observability... run build && pnpm --filter @haizel/api... run build && pnpm --filter @haizel/core-api... run build && pnpm test --if-present"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "dotenv-cli": "^10.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "yaml": "^2.5.0"
  }
}
